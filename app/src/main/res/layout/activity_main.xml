<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6F0FA"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- App Title -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GearUp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#0B3D91" />

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome Back..."
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:textColor="#333" />

    <!-- Quick Stats (Icons with Text Below) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:weightSum="3">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:layout_height="100dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="4dp"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="🔧"
                    android:textSize="32sp"
                    android:gravity="center"
                    android:textColor="#0B3D91" />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Today: 3"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="#0B3D91" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:layout_height="100dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="4dp"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="🚗"
                    android:textSize="32sp"
                    android:gravity="center"
                    android:textColor="#0B3D91" />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Customers: 12"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="#0B3D91" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:layout_height="100dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="4dp"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="⏳"
                    android:textSize="32sp"
                    android:gravity="center"
                    android:textColor="#0B3D91" />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Upcoming: 4"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="#0B3D91" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Action Buttons with Icons on Left and Text Centered -->

    <!-- Add New Service Record -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        card_view:cardCornerRadius="16dp"
        card_view:cardElevation="4dp"
        android:background="#FFCDD2"> <!-- Soft red -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <!-- Icon on the left -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/app_logo"
                android:contentDescription="Add Service Icon" />

            <!-- Text centered -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="➕ Add New Service Record"
                android:textColor="#000"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginLeft="12dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- View Service History -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        card_view:cardCornerRadius="16dp"
        card_view:cardElevation="4dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <!-- Icon on the left -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/app_logo"
                android:contentDescription="View Service Icon" />

            <!-- Text centered -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="📚 View Service History"
                android:textColor="#000"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginLeft="12dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Upcoming Checkups -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        card_view:cardCornerRadius="16dp"
        card_view:cardElevation="4dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <!-- Icon on the left -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/app_logo"
                android:contentDescription="Upcoming Checkups Icon" />

            <!-- Text centered -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🔔 Upcoming Checkups"
                android:textColor="#000"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginLeft="12dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
