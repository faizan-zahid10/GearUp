<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Profile"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Info Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/text_border"
            android:padding="20dp"
            android:gravity="center_horizontal"
            android:elevation="4dp"
            android:layout_marginBottom="30dp">

            <!-- Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textStyle="bold"
                android:textSize="@dimen/inp_text_label"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvCustomerName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Faizan Zahid"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Phone -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textStyle="bold"
                android:textSize="@dimen/inp_text_label"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="+92 300 1234567"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Address -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textStyle="bold"
                android:textSize="@dimen/inp_text_label"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="123 Street Name, Lahore"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Vehicle Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vehicle"
                android:textStyle="bold"
                android:textSize="@dimen/inp_text_label"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvVehicleName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Honda Civic"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Vehicle Type -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vehicle Type"
                android:textStyle="bold"
                android:textSize="@dimen/inp_text_label"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvVehicleType"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Car"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Service Type -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Service Type"
                android:textStyle="bold"
                android:textColor="#555"
                android:textSize="@dimen/inp_text_label"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvServiceType"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Oil Change"
                android:textSize="16sp"
                android:textColor="#000"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp">

                <!-- Dial Button -->
                <ImageView
                    android:id="@+id/btnCall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="2dp"
                    android:background="@color/cancel_btn_bg"
                    android:src="@drawable/icon_call"
                    android:layout_marginEnd="24dp" />

                <!-- Message Button -->
                <ImageView
                    android:id="@+id/btnMessage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="2dp"
                    android:background="@color/save_btn_bg"
                    android:src="@drawable/icon_message"
                    android:layout_marginEnd="24dp"/>

                <!-- Message Button -->
                <ImageView
                    android:id="@+id/btnLocation"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="2dp"
                    android:background="#D1BE5F"
                    android:src="@drawable/icon_location"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>